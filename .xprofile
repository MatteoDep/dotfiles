#!/bin/sh

# set keyboard layout
setxkbmap us &

# composite manager (e.g allows transparency)
xcompmgr &

# read Xresources
xrdb ~/.config/Xresources &

# set wallpaper
setwall --refresh &

# access backlight
sudo chmod a+rw /sys/class/backlight/intel_backlight/brightness &

# notifications
dunst &

# clipboard menu
clipmenud &

# status bar
dwmblocks &
