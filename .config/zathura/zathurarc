# General settings {{{
# window title
set window-title-basename "true"
# enable copy to clipboard
set selection-clipboard clipboard
# show scrollbar
set guioptions 'sv'
# recolor options
set recolor false
set recolor-keephue true
set recolor-reverse-video false
# adust on width
set adjust-open width
# }}}

# theme {{{
# Start flavours
# Base16 Horizon Dark
# Author: MichaÃ«l Ball (http://github.com/michael-ball/)

set default-bg                  "#1C1E26"
set default-fg                  "#CBCED0"

set statusbar-bg                "#2E303E"
set statusbar-fg                "#CBCED0"

set inputbar-bg                 "#1C1E26"
set inputbar-fg                 "#E3E6EE"

set notification-bg             "#1C1E26"
set notification-fg             "#E3E6EE"

set notification-error-bg       "#1C1E26"
set notification-error-fg       "#E93C58"

set notification-warning-bg     "#1C1E26"
set notification-warning-fg     "#E93C58"

set highlight-color             "#24A8B4"
