# General settings {{{
# window title
set window-title-basename "true"
# enable copy to clipboard
set selection-clipboard clipboard
# show scrollbar
set guioptions 'sv'
# recolor options
set recolor true
set recolor-keephue true
set recolor-reverse-video false
# adust on width
set adjust-open width
# }}}

# theme {{{
# Start flavours
# Base16 Harmonic16 Dark
# Author: Jannik Siebert (https://github.com/janniks)

set default-bg                  "#0b1c2c"
set default-fg                  "#cbd6e2"

set statusbar-bg                "#405c79"
set statusbar-fg                "#cbd6e2"

set inputbar-bg                 "#0b1c2c"
set inputbar-fg                 "#f7f9fb"

set notification-bg             "#0b1c2c"
set notification-fg             "#f7f9fb"

set notification-error-bg       "#0b1c2c"
set notification-error-fg       "#bf8b56"

set notification-warning-bg     "#0b1c2c"
set notification-warning-fg     "#bf8b56"

set highlight-color             "#568bbf"
set highlight-active-color      "#56bf8b"

set completion-bg               "#223b54"
set completion-fg               "#568bbf"

set completion-highlight-fg     "#0b1c2c"
set completion-highlight-bg     "#568bbf"

set recolor-lightcolor          "#0b1c2c"
set recolor-darkcolor           "#cbd6e2"

set recolor-loading-bg          "#0b1c2c"
set recolor-loading-fg          "#cbd6e2"

set index-bg                    "#405c79"
set index-fg                    "#cbd6e2"

set index-active-bg             "#568bbf"
set index-active-fg             "#0b1c2c"
# End flavours
# }}}

# mappings {{{
map i recolor
map [presentation] i recolor
map [fullscreen] i recolor
map p print
map <C-g> feedkeys :info<Return>
map F10 toggle_statusbar
map [presentation] j navigate next
map [presentation] k navigate previous
# }}}
