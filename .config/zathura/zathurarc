# General settings {{{
# window title
set window-title-basename "true"
# enable copy to clipboard
set selection-clipboard clipboard
# show scrollbar
set guioptions 'sv'
# recolor options
set recolor true
set recolor-keephue true
set recolor-reverse-video false
# adust on width
set adjust-open width
# }}}

# theme {{{
# Start flavours
# Base16 Solarized Light
# Author: Ethan Schoonover (modified by aramisgithub)

set default-bg                  "#fdf6e3"
set default-fg                  "#586e75"

set statusbar-bg                "#93a1a1"
set statusbar-fg                "#586e75"

set inputbar-bg                 "#fdf6e3"
set inputbar-fg                 "#002b36"

set notification-bg             "#fdf6e3"
set notification-fg             "#002b36"

set notification-error-bg       "#fdf6e3"
set notification-error-fg       "#dc322f"

set notification-warning-bg     "#fdf6e3"
set notification-warning-fg     "#dc322f"

set highlight-color             "#2aa198"
set highlight-active-color      "#859900"

set completion-bg               "#eee8d5"
set completion-fg               "#2aa198"

set completion-highlight-fg     "#fdf6e3"
set completion-highlight-bg     "#2aa198"

set recolor-lightcolor          "#fdf6e3"
set recolor-darkcolor           "#586e75"

set recolor-loading-bg          "#fdf6e3"
set recolor-loading-fg          "#586e75"

set index-bg                    "#93a1a1"
set index-fg                    "#586e75"

set index-active-bg             "#2aa198"
set index-active-fg             "#fdf6e3"
# End flavours
# }}}

# mappings {{{
map i recolor
map [presentation] i recolor
map [fullscreen] i recolor
map p print
map <C-g> feedkeys :info<Return>
map F10 toggle_statusbar
map [presentation] j navigate next
map [presentation] k navigate previous
# }}}
