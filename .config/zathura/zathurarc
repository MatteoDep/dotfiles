# General settings {{{
# window title
set window-title-basename "true"
# enable copy to clipboard
set selection-clipboard clipboard
# show scrollbar
set guioptions 'sv'
# recolor options
set recolor true
set recolor-keephue true
set recolor-reverse-video false
# adust on width
set adjust-open width
# }}}

# theme {{{
# Start flavours
# Base16 Dracula
# Author: Mike Barkmin (http://github.com/mikebarkmin) based on Dracula Theme (http://github.com/dracula)

set default-bg                  "#282936"
set default-fg                  "#e9e9f4"

set statusbar-bg                "#4d4f68"
set statusbar-fg                "#e9e9f4"

set inputbar-bg                 "#282936"
set inputbar-fg                 "#f7f7fb"

set notification-bg             "#282936"
set notification-fg             "#f7f7fb"

set notification-error-bg       "#282936"
set notification-error-fg       "#ea51b2"

set notification-warning-bg     "#282936"
set notification-warning-fg     "#ea51b2"

set highlight-color             "#a1efe4"
set highlight-active-color      "#ebff87"

set completion-bg               "#3a3c4e"
set completion-fg               "#a1efe4"

set completion-highlight-fg     "#282936"
set completion-highlight-bg     "#a1efe4"

set recolor-lightcolor          "#282936"
set recolor-darkcolor           "#e9e9f4"

set recolor-loading-bg          "#282936"
set recolor-loading-fg          "#e9e9f4"

set index-bg                    "#4d4f68"
set index-fg                    "#e9e9f4"

set index-active-bg             "#a1efe4"
set index-active-fg             "#282936"
# End flavours
# }}}

# mappings {{{
map i recolor
map [presentation] i recolor
map [fullscreen] i recolor
map p print
map <C-g> feedkeys :info<Return>
map F10 toggle_statusbar
map [presentation] j navigate next
map [presentation] k navigate previous
# }}}
