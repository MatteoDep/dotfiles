# bspwm
# quit/restart bspwm
super + shift + {q,r}
	pkill -x panel; bspc {quit,wm -r}
# close and kill
super + {_,ctrl + }q
	bspc node -{c,k}
# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next
# swap the current node and the biggest window
super + shift + =
	bspc node -s biggest.window
# state/flags
# set the window state
super + {t,f,space}
	bspc node -t {tiled,fullscreen,floating}
# focus the next/previous window in the current desktop
super + {j,k}
	bspc node -f {next,prev}.local.!hidden.window
# swap the next/previous window in the current desktop
super + {bracketright,bracketleft}
	bspc node -s {next,prev}.local.!hidden.window
# rotate tree
super + shift + {bracketright,bracketleft}
	bspc node @parent -R {90,270}
# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last
# focus or send to the given desktop
super + {_,shift + }{1-9}
	bspc {desktop -f,node -d} '{1-9}'
# resize a window
super + shift + {h,j,k,l}
    {bspc node -z right -20 0 || bspc node -z left -20 0 \
    ,bspc node -z bottom 0 20 || bspc node -z top 0 20 \
    ,bspc node -z bottom 0 -20 || bspc node -z top 0 -20 \
    ,bspc node -z right 20 0 || bspc node -z left 20 0}
# balance sizes
super + equal
    bspc node @parent -B
# swap the current node and the biggest window
super + shift + equal
	bspc node -s biggest.local.!hidden.window

# volume
XF86Audio{LowerVolume,RaiseVolume}
    pamixer --allow-boost -{d,i} 10; pkill -RTMIN+10 statusblocks
XF86AudioMute
    pamixer -t; pkill -RTMIN+10 statusblocks

# brightness
XF86MonBrightness{Down,Up}
    backlight -{d,i} 2

# programs
super + w
    $BROWSER
super + Return
    $TERMINAL
super + e
    $TERMINAL -e vifmrun
super + shift + w
    $TERMINAL --class floatterm -e connmanctl; \
    pkill -RTMIN+4 statusblocks
super + n
    $TERMINAL --class floatterm -e newsboat; \
    pkill -RTMIN+6 statusblocks
super + c
    $TERMINAL --class floatterm -e calcurse

# scratchpads
super + shift + Return
    tdrop -Aam -n spterm -x 0 -y 20 -w 100% -h 80% \
    "$TERMINAL" --class floatterm -t spterm
super + shift + e
    tdrop -Aam -n spfm -x 0 -y 20 -w 100% -h 80% \
    "$TERMINAL" --class floatterm -t spfm -e vifmrun

# menus
super + r
    dmenu_run
super + p
    clipctl disable && passmenu; \
    clipctl enable
super + y
    clipmenu
super + u
    dm-unicode
super + shift + b
    dm-bluetooth
super + x
    dm-shutdown

# quick actions
super + s
    capture
super + shift + s
    capture -sf
