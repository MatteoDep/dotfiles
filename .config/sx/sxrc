#!/bin/sh

# read Xresources
xrdb ~/.config/Xresources &

# X11 settings
setxkbmap -option compose:ralt us &
xsetroot -cursor_name left_ptr &
xinput set-prop 12 300 1

# composite manager (e.g allows transparency)
picom &

# set wallpaper
setwall --refresh &

# notifications
dunst &

# clipboard menu
clipmenud &

# calendar
calcurse --daemon &

# keyboard shortcut deamon
sxhkd &

# exec WM or DE
exec bspwm

# kill pulseaudio (prevents loading it 2 times)
pulseaudio --kill
