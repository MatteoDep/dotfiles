# General settings {{{
# window title
set window-title-basename "true"
# enable copy to clipboard
set selection-clipboard clipboard
# show scrollbar
set guioptions 'sv'
# recolor options
set recolor-keephue true
set recolor-reverse-video false
# adust on width
set adjust-open width
# disable sandbox causing link issues
set sandbox none
# }}}

# theme {{{
# Start flavours
# Base16 OneDark
# Author: Lalit Magant (http://github.com/tilal6991)

set default-bg                  "#353b45"
set default-fg                  "#abb2bf"

set statusbar-bg                "#3e4451"
set statusbar-fg                "#abb2bf"

set inputbar-bg                 "#282c34"
set inputbar-fg                 "#c8ccd4"

set notification-bg             "#282c34"
set notification-fg             "#c8ccd4"

set notification-error-bg       "#282c34"
set notification-error-fg       "#e06c75"

set notification-warning-bg     "#282c34"
set notification-warning-fg     "#e06c75"

set highlight-color             "#56b6c2"
set highlight-active-color      "#98c379"

set completion-bg               "#353b45"
set completion-fg               "#56b6c2"

set completion-highlight-fg     "#282c34"
set completion-highlight-bg     "#56b6c2"

set recolor-lightcolor          "#282c34"
set recolor-darkcolor           "#abb2bf"

set render-loading-bg          "#282c34"
set render-loading-fg          "#abb2bf"

set index-bg                    "#353b45"
set index-fg                    "#abb2bf"

set index-active-bg             "#61afef"
set index-active-fg             "#282c34"
# End flavours
# }}}

# mappings {{{
map i recolor
map [presentation] i recolor
map [fullscreen] i recolor
map p print
map <C-g> feedkeys :info<Return>
map F10 toggle_statusbar
map [presentation] j navigate next
map [presentation] k navigate previous
# }}}
