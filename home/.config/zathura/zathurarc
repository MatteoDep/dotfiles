# General settings {{{
# window title
set window-title-basename "true"
# enable copy to clipboard
set selection-clipboard clipboard
# show scrollbar
set guioptions 'sv'
# recolor options
set recolor-keephue true
set recolor-reverse-video false
# adust on width
set adjust-open width
# disable sandbox causing link issues
set sandbox none
# }}}

# theme {{{
# Start flavours
# Base16 Solar Flare
# Author: Chuck Harmston (https://chuck.harmston.ch)

set default-bg                  "#222E38"
set default-fg                  "#A6AFB8"

set statusbar-bg                "#586875"
set statusbar-fg                "#A6AFB8"

set inputbar-bg                 "#18262F"
set inputbar-fg                 "#F5F7FA"

set notification-bg             "#18262F"
set notification-fg             "#F5F7FA"

set notification-error-bg       "#18262F"
set notification-error-fg       "#EF5253"

set notification-warning-bg     "#18262F"
set notification-warning-fg     "#EF5253"

set highlight-color             "#52CBB0"
set highlight-active-color      "#7CC844"

set completion-bg               "#222E38"
set completion-fg               "#52CBB0"

set completion-highlight-fg     "#18262F"
set completion-highlight-bg     "#52CBB0"

set recolor-lightcolor          "#18262F"
set recolor-darkcolor           "#A6AFB8"

set render-loading-bg          "#18262F"
set render-loading-fg          "#A6AFB8"

set index-bg                    "#222E38"
set index-fg                    "#A6AFB8"

set index-active-bg             "#33B5E1"
set index-active-fg             "#18262F"
# End flavours
# }}}

# mappings {{{
map i recolor
map [presentation] i recolor
map [fullscreen] i recolor
map p print
map <C-g> feedkeys :info<Return>
map F10 toggle_statusbar
map [presentation] j navigate next
map [presentation] k navigate previous
# }}}
