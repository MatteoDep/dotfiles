# kde
super + shift + r
	kquitapp5 plasmashell || killall plasmashell && kstart5 plasmashell

# programs
super + shift + w
	$BROWSER
super + shift + Return
	$TERMINAL
super + shift + e
	dolphin
super + v
	vim-everywhere
super + shift + t
	thunderbird

# scratchpads
super + Return
	tdrop -Aam -n 'sp-term' -x 5% -y 0 -w 90% -h 80% \
	alacritty --class floatterm -t spterm -o window.decorations=none
super + e
	tdrop -Aam -n 'sp-fm' -x 5% -y 0 -w 90% -h 80% \
	alacritty --class floatterm -t spfm -o window.decorations=none -e ranger
super + o
	tdrop -Aam -n 'sp-py' -x 5% -y 0 -w 90% -h 80% \
	alacritty --class floatterm -t sppy -o window.decorations=none -e python
super + c
	tdrop -Aam -n 'sp-py' -x 5% -y 0 -w 90% -h 80% \
	alacritty --class floatterm -t sppy -o window.decorations=none -e chat

# menus
super + u
	iconmenu

# quick actions
super + s
	capture
super + shift + s
	capture -s
