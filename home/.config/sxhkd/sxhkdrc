# bspwm
# quit/restart bspwm
super + shift + {q,r}
	bspc {quit,wm -r}
# close and kill
super + {_,ctrl + }q
	bspc node -{c,k}
# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next
# swap the current node and the biggest window
super + shift + equal
	bspc node -s biggest.window
# state/flags
# set the window state
super + {f,space}
	bspwm-tool toggle-{fullscreen,floating}
# hidden/show
super + {_,shift + }i
	bspwm-tool {hide,unhide}
# focus the next/previous window in the current desktop
super + {j,k}
	bspc node -f {next,prev}.local.!hidden.window
# swap the next/previous window in the current desktop
super + {bracketright,bracketleft}
	bspc node -s {next,prev}.local.!hidden.window
# rotate tree
super + shift + {bracketright,bracketleft}
	bspc node @parent -R {90,270}
# focus the last node/desktop
super + {grave,Tab}
	bspc {monitor,desktop} -f last
# focus or send to the given desktop
super + {_,shift + }{1-9}
	bspc {desktop -f,node -d} '^{1-9}'
# focus or send to the given monitor
super + {_,shift + }F{1-9}
	bspc {monitor -f,node -m} '^{1-9}'
# resize a window
super + shift + {h,j,k,l}
	{bspc node -z right -20 0 || bspc node -z left -20 0 \
	,bspc node -z bottom 0 20 || bspc node -z top 0 20 \
	,bspc node -z bottom 0 -20 || bspc node -z top 0 -20 \
	,bspc node -z right 20 0 || bspc node -z left 20 0}
# balance sizes
super + equal
	bspc node @parent -B
# swap the current node and the biggest window
super + shift + equal
	bspc node -s biggest.local.!hidden.window

# volume
XF86Audio{LowerVolume,RaiseVolume}
	pamixer --allow-boost -{d,i} 10; pkill -RTMIN+10 statusblocks
XF86AudioMute
	pamixer -t; pkill -RTMIN+10 statusblocks

# brightness
XF86MonBrightness{Down,Up}
	xbacklight -{dec,inc} 5

# programs
super + w
	$BROWSER
super + shift + Return
	$TERMINAL
super + shift + e
	pcmanfm
super + v
	vim-everywhere
super + shift + t
	thunderbird

# scratchpads
super + Return
	tdrop -Aam -n 'sp-term' -x 5% -y 20 -w 90% -h 80% \
	"$TERMINAL" --class floatterm -t spterm
super + e
	tdrop -Aam -n 'sp-fm' -x 5% -y 20 -w 90% -h 80% \
	"$TERMINAL" --class floatterm -t spfm -e ranger
super + o
	tdrop -Aam -n 'sp-py' -x 5% -y 20 -w 90% -h 80% \
	"$TERMINAL" --class floatterm -t sppy -e python
super + n
	tdrop -Aam -n 'sp-news' -x 5% -y 20 -w 90% -h 80% \
	"$TERMINAL" --class floatterm -t spnews -e newsboat; \
	pkill -RTMIN+6 statusblocks
super + c
	tdrop -Aam -n 'sp-cal' -x 5% -y 20 -w 90% -h 80% \
	"$TERMINAL" --class floatterm -t spcal -e calcurse
super + t
	tdrop -Aam -n 'sp-top' -x 5% -y 20 -w 90% -h 80% \
	"$TERMINAL" --class floatterm -t sptop -e btop

# menus
super + r
	rofi -show run
super + d
	rofi -show combi -combi-modi "window,drun" -modi combi
super + p
	clipctl disable && rofi-pass; \
	clipctl enable
super + y
	clipmenu
super + u
	iconmenu
super + b
	blueman-manager
super + shift + c
	bcmenu
super + shift + m
	mountmenu
super + shift + x
	xrandrmenu
super + x
	shutmenu

# quick actions
super + s
	capture
super + shift + s
	capture -s

# dunst
ctrl {_,+ shift}+ space
	dunstctl close{_,-all}
ctrl + shift + h
	dunstctl history-pop
