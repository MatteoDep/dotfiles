# kde
super + shift + r
	kquitapp5 plasmashell || killall plasmashell && kstart5 plasmashell

# programs
super + shift + w
	$BROWSER
super + shift + Return
	$TERMINAL
super + shift + e
	dolphin
super + v
	vim-everywhere
super + shift + t
	thunderbird

# scratchpads
super + Return
	tdrop -Aam -n 'sp-term' -x 5% -w 90% -h 80% \
	"$TERMINAL" --class floatterm -t spterm
super + e
	tdrop -Aam -n 'sp-fm' -x 5% -w 90% -h 80% \
	"$TERMINAL" --class floatterm -t spfm -e ranger
super + o
	tdrop -Aam -n 'sp-py' -x 5% -w 90% -h 80% \
	"$TERMINAL" --class floatterm -t sppy -e python

# menus
super + u
	iconmenu

# quick actions
super + s
	capture
super + shift + s
	capture -s
